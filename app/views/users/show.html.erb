
<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <hr>
  <p>name    <span><%= @user.name %></span></p>
  <hr>
  <p>introduction    <span><%= @user.introduction %></span></p>
  <%= link_to '', edit_user_path(@user), class: "btn btn-default btn-block glyphicon glyphicon-edit" %>
  <h2>New book</h2>
  <%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book',class: "btn btn-default btn-block"%>
  <% end %>
</div>
<div class="col-xs-9">
  <h2>Books</h2>
  <table>
    <tr>
      <th ></th>
      <th><strong>Title</strong></th>
      <th><strong>Opinion</strong></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title, book_path(book), class: "pull-left" %></td>
      <td><%= book.body%></td>
    </tr>
    <% end %>
  </table>
</div>



<div class="container">
  <div class="row"> 
  </div>
</div>