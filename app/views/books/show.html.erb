<div class="col-md-1"></div>
<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <hr>
  <p>name    <span><%= @user.name %></span></p>
  <hr>
  <p>introduction    <span><%= @user.introduction %></span></p>
  <%= link_to '', edit_user_path(@user), class: "btn btn-default btn-block glyphicon glyphicon-edit" %>
  <h2>New book</h2>
  <%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book',class: "btn btn-default btn-block"%>
  <% end %>
</div>
<div class="col-md-7">
  <h2>Book detail</h2>
  <table>
    <tr>
      <th ></th>
      <th><strong>Title</strong></th>
      <th><strong>Opinion</strong></th>
      <th ></th>
      <th ></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img inline-block", fallback: "no_image.jpg" %>
      <%= link_to @user.name, user_path(@user), class: "pull-left" %>
      </td>
      <td><%= book.title%></td>
      <td><%= book.body%></td>
      <td >
  <% if @user.id == current_user.id %>
    <p><%= link_to "Edit", edit_book_path(book), class: "btn btn-success pull-right" %></p>
  <% end %>
      </td>
      <td >
  <% if @user.id == current_user.id %>
    <p><%= link_to "Destroy", book_path(book), method: :delete, class: "btn btn-danger pull-right"%></p>
  <% end %>      
      </td>
    </tr>
    <% end %>
  </table>
</div>
<div class="col-md-1"></div>
